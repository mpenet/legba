{
    "openapi": "3.1.0",
    "info": {
        "title": "Simple API Example",
        "summary": "A very basic OpenAPI 3.1 example for testing",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://api.example.com/v1",
            "description": "Production server"
        },
        {
            "url": "http://localhost:8080/v1",
            "description": "Local development server"
        }
    ],
    "paths": {
        "/search": {
            "get": {
                "summary": "Searches a list of items",
                "description": "Search",
                "parameters": [
                    {
                        "name": "term",
                        "in": "query",
                        "required": true,
                        "description": "Search term",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of items.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string",
                                                "format": "uuid",
                                                "description": "Unique identifier for the item."
                                            },
                                            "name": {
                                                "type": "string",
                                                "description": "Name of the item."
                                            },
                                            "value": {
                                                "type": "number",
                                                "format": "float",
                                                "description": "Numerical value of the item."
                                            }
                                        },
                                        "required": ["id", "name", "value"]
                                    }
                                },
                                "examples": {
                                    "example1": {
                                        "summary": "An example list of items",
                                        "value": [
                                            {
                                                "id": "a1b2c3d4-e5f6-7890-1234-567890abcdef",
                                                "name": "Item A",
                                                "value": 10.5
                                            },
                                            {
                                                "id": "f2e1d0c9-b8a7-6543-2109-fedcba987654",
                                                "name": "Item B",
                                                "value": 20.0
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new item",
                "description": "Adds a new item to the system.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "description": "Name of the new item."
                                    },
                                    "value": {
                                        "type": "number",
                                        "format": "float",
                                        "description": "Numerical value for the new item."
                                    }
                                },
                                "required": ["name", "value"]
                            },
                            "examples": {
                                "newItem": {
                                    "summary": "Example of a new item to create",
                                    "value": {
                                        "name": "New Item C",
                                        "value": 15.75
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Item created successfully.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "format": "uuid"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input."
                    }
                }
            }
        },
        "/items": {
            "get": {
                "summary": "Retrieve a list of items",
                "description": "Returns a list of all items available in the system.",
                "responses": {
                    "200": {
                        "description": "A list of items.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string",
                                                "format": "uuid",
                                                "description": "Unique identifier for the item."
                                            },
                                            "name": {
                                                "type": "string",
                                                "description": "Name of the item."
                                            },
                                            "value": {
                                                "type": "number",
                                                "format": "float",
                                                "description": "Numerical value of the item."
                                            }
                                        },
                                        "required": ["id", "name", "value"]
                                    }
                                },
                                "examples": {
                                    "example1": {
                                        "summary": "An example list of items",
                                        "value": [
                                            {
                                                "id": "a1b2c3d4-e5f6-7890-1234-567890abcdef",
                                                "name": "Item A",
                                                "value": 10.5
                                            },
                                            {
                                                "id": "f2e1d0c9-b8a7-6543-2109-fedcba987654",
                                                "name": "Item B",
                                                "value": 20.0
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new item",
                "description": "Adds a new item to the system.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "description": "Name of the new item."
                                    },
                                    "value": {
                                        "type": "number",
                                        "format": "float",
                                        "description": "Numerical value for the new item."
                                    }
                                },
                                "required": ["name", "value"]
                            },
                            "examples": {
                                "newItem": {
                                    "summary": "Example of a new item to create",
                                    "value": {
                                        "name": "New Item C",
                                        "value": 15.75
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Item created successfully.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "format": "uuid"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input."
                    }
                }
            }
        },
        "/item/{itemId}": {
            "get": {
                "summary": "Retrieve a single item by ID",
                "parameters": [
                    {
                        "name": "itemId",
                        "in": "path",
                        "required": true,
                        "description": "ID of the item to retrieve.",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Details of the requested item.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "format": "uuid"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Item not found."
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "ApiKeyAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "X-API-Key"
            }
        }
    },
    "security": [
        {
            "ApiKeyAuth": []
        }
    ],
    "tags": [
        {
            "name": "items",
            "description": "Operations related to items in the system."
        }
    ],
    "externalDocs": {
        "description": "Find out more about this API",
        "url": "http://docs.example.com"
    }
}
